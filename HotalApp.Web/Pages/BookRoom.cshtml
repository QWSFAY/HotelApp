@page
@model HotalApp.Web.Pages.BookRoomModel

@{
    ViewData["Title"] = "预定房间";
}

<div class="min-h-screen bg-gradient-to-b from-gray-50 to-gray-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">

        <!-- 返回链接 + 标题 -->
        <div class="mb-8">
            <a asp-page="/RoomSearch" class="text-indigo-600 hover:text-indigo-800 flex items-center text-sm font-medium">
                <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                返回房型搜索
            </a>
        </div>

        <!-- 房型信息卡片 -->
        <div class="bg-white shadow-xl rounded-2xl overflow-hidden border border-gray-100 mb-10">
            <div class="px-8 py-6 bg-gradient-to-r from-indigo-50 to-blue-50 border-b border-gray-200">
                <h1 class="text-3xl font-bold text-gray-800">
                    预定房间
                </h1>
            </div>

            <div class="p-8">
                <h2 class="text-2xl font-semibold text-gray-900 mb-3">
                    @Model.RoomType.Title
                </h2>
                <p class="text-gray-600 leading-relaxed mb-6">
                    @Model.RoomType.Description
                </p>

                <!-- 价格展示（可选，根据你的模型是否有价格字段） -->
                @if (Model.RoomType.Price > 0)
                {
                        <div class="inline-block bg-indigo-100 text-indigo-800 px-4 py-2 rounded-full font-medium mb-8">
                            每晚 ¥@Model.RoomType.Price
                        </div>
                }
            </div>
        </div>

        <!-- 预订表单 -->
        <div class="bg-white shadow-xl rounded-2xl p-8 md:p-10 border border-gray-100">
            <h3 class="text-xl font-semibold text-gray-800 mb-8 border-b border-gray-200 pb-4">
                填写预订信息
            </h3>

            <form method="post" class="space-y-6">
                <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                    <div>
                        <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-2">
                            姓（Last Name / 姓氏）
                        </label>
                        <input asp-for="FirstName"
                               class="block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 focus:ring-opacity-50 py-3 px-4 text-base placeholder-gray-400" />
                        <span asp-validation-for="FirstName" class="text-red-600 text-sm mt-1 block"></span>
                    </div>

                    <div>
                        <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-2">
                            名（First Name / 名字）
                        </label>
                        <input asp-for="LastName"
                               class="block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 focus:ring-opacity-50 py-3 px-4 text-base placeholder-gray-400" />
                        <span asp-validation-for="LastName" class="text-red-600 text-sm mt-1 block"></span>
                    </div>
                </div>

                <!-- 可以继续添加更多字段，如邮箱、电话、入住人数等 -->
                <!-- 示例：邮箱 -->
                <!-- 
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-2">
                        电子邮箱
                    </label>
                    <input asp-for="Email" type="email" class="block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4" />
                </div>
                -->

                <!-- 提交按钮 -->
                <div class="pt-4">
                    <button type="submit"
                            class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-4 px-6 rounded-lg transition duration-200 shadow-lg hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 text-lg">
                        确认预订
                    </button>
                </div>

                <!-- 小提示 -->
                <p class="mt-4 text-center text-sm text-gray-500">
                    预订后我们将通过邮件/电话与您确认详情
                </p>
            </form>
        </div>
    </div>
</div>

<!-- 客户端验证脚本（如果需要） -->
@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}