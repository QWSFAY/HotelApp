<Window x:Class="HotelApp.Desktop.CheckInForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelApp.Desktop"
        mc:Ignorable="d"
        Title="确认入住"
        Height="540"
        Width="537"
        WindowStartupLocation="CenterOwner"
        Background="#F1F5F9"
        FontFamily="Segoe UI"
        FontSize="18"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- 統一 TextBlock 樣式 -->
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10"/>
        </Style>

        <!-- 標籤樣式 -->
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="Width" Value="110"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,10,12,10"/>
        </Style>

        <!-- 內容樣式 -->
        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#0F172A"/>
        </Style>

        <!-- 按鈕樣式 -->
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="48,16"/>
            <Setter Property="Margin" Value="0,30,0,10"/>
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#94A3B8"/>
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="White"
            CornerRadius="16"
            Margin="24"
            Padding="40,32,40,24"
            BorderBrush="#E2E8F0"
            BorderThickness="1">

        <Border.Effect>
            <DropShadowEffect Color="Black"
                              Direction="320"
                              ShadowDepth="4"
                              BlurRadius="16"
                              Opacity="0.20"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 標題 -->
            <TextBlock Grid.Row="0"
                       Text="入住确认"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="#1E293B"
                       Margin="0,0,0,32"
                       HorizontalAlignment="Left"/>


            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
                <TextBlock Style="{StaticResource LabelText}" Text="预定人："/>
                <TextBlock x:Name="firstNameText" Style="{StaticResource ValueText}" Margin="0,8,0,0"/>
                <TextBlock Text="  " />
                <TextBlock x:Name="lastNameText" Style="{StaticResource ValueText}" Margin="0,8,0,0"/>
            </StackPanel>

            <!-- 房型 -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,16">
                <TextBlock Style="{StaticResource LabelText}" Text="房型："/>
                <TextBlock x:Name="titleText" Style="{StaticResource ValueText}" Margin="0,8,0,0"/>
            </StackPanel>

            <!-- 房號 -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,16">
                <TextBlock Style="{StaticResource LabelText}" Text="房号："/>
                <TextBlock x:Name="roomNumberText" Style="{StaticResource ValueText}" Margin="0,8,0,0"/>
            </StackPanel>

            <!-- 總金額 -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,32">
                <TextBlock Style="{StaticResource LabelText}" Text="总金额："/>
                <TextBlock x:Name="totalCostText"
                           Style="{StaticResource ValueText}" Margin="0,8,0,0"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#DC2626"/>
                
            </StackPanel>

            <!-- 確認按鈕 -->
            <Button Grid.Row="6"
                    x:Name="checkInUser"
                    Click="checkInUser_Click"
                    HorizontalAlignment="Center">
                确认入住
            </Button>
        </Grid>
    </Border>
</Window>